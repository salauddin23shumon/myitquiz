<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#9B61F0" />
            <solid android:color="#0C49E2"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#F6F7F6" />
            <gradient
                android:centerColor="#7377CA"
                android:endColor="#055CF5"
                android:gradientRadius="400"
                android:startColor="#1a0b3e"
                android:angle="90" >
            </gradient>
        </shape>
    </item>
</selector>