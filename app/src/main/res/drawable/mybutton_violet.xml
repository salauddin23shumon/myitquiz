<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#002008" />
            <gradient android:angle="-90" android:startColor="#012804" android:endColor="#012309"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#f7e3e3" />
            <solid android:color="#f588aa"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#01280c" />
            <gradient
                android:centerColor="#512c9e"
                android:endColor="#b341ff"
                android:gradientRadius="400"
                android:startColor="#1a0b3e"
                android:angle="90" >
            </gradient>
        </shape>
    </item>
</selector>