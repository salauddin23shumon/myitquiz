<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#f7e3e3" />
            <solid android:color="#15DD58"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#F9FAFA" />
            <gradient
                android:centerColor="#d5f2ef"
                android:endColor="#08eae3"
                android:gradientRadius="400"
                android:startColor="#040cf5"
                android:angle="90" >
            </gradient>
        </shape>
    </item>
</selector>


