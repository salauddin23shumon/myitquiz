<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#f7e3e3" />
            <solid android:color="#FA2404"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#FAFCFC" />
            <gradient
                android:centerColor="#FAACAC"
                android:endColor="#FD2C30"
                android:gradientRadius="400"
                android:startColor="#8c030a"
                android:angle="90" >
            </gradient>
        </shape>
    </item>
</selector>


