<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#f7e3e3" />
            <solid android:color="#C442F3"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#FDFDFC" />
            <gradient
                android:centerColor="#f70410"
                android:endColor="#f59a9c"
                android:gradientRadius="400"
                android:startColor="#640108"
                android:angle="90" >
            </gradient>
        </shape>
    </item>
</selector>