<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#1048CA" />
            <solid android:color="#55f1d9"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#F4F8F7" />
            <gradient
                android:centerColor="#A0F7E1"
                android:endColor="#0EC1E2"
                android:gradientRadius="400"
                android:startColor="#07F126"
                android:angle="90" >
            </gradient>
        </shape>
    </item>
</selector>


