<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#f7e3e3" />
            <solid android:color="#24AB0C"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#FBFDFB" />
            <gradient
                android:centerColor="#1a2f9b"
                android:endColor="#aee4f5"
                android:gradientRadius="400"
                android:startColor="#0615ce"
                android:angle="90" >
            </gradient>
        </shape>
    </item>
</selector>