<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background60"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mytoolbar2"
            app:popupTheme="@style/menu"
            app:subtitleTextColor="#fff"
            app:titleTextColor="#fff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Home"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="normal|bold"
                android:gravity="center"
                android:layout_marginLeft="?android:attr/actionBarSize" />
        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="80dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_play"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/btn_playnow" />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/btn_online" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>