<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181723"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.kvikesh800gmail.relativlayoutjava.Result">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:textColor="#04e26b"
            android:textSize="28sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="45dp"
            android:background="#3097fd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attempted Questions :"
                android:textColor="#d4ce2e"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/attempted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFD4CE2E"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correct Answers          :"
                android:textColor="#51b364"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#51b364"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incorrect Answers       :"
                android:textColor="#e9403d"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/incorrect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#e9403d"
                android:textSize="24sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:id = "@+id/tv"
            android:layout_marginTop="25dp"
            android:background="#3097fd" />

        <TextView
            android:id="@+id/you"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#d37df5"
            android:textSize="24sp" />

        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/five__stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fivestars"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/five_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/five_likes"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/five_dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/five_dislikes"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/five_eggs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/five_eggs"
                android:visibility="invisible"/>
        </RelativeLayout>


    </LinearLayout>

</ScrollView>
