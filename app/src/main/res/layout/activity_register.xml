<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background18">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        tools:context=".activity.RegisterActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/top_layout"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signup"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="30sp"
                android:gravity="center" />
            <LinearLayout
                android:id="@+id/img_layout"
                android:layout_marginTop="10dp"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:background="@drawable/circle2"
                android:layout_gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:layout_gravity="center"
                    android:src="@drawable/white_cricle" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_photo"
                android:layout_marginTop="10dp"
                style="@style/Widget.AppCompat.ActionButton.CloseMode"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/mybutton_green"
                android:textColor="@color/colorText2"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="Add Photo" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/top_layout"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="7dp"
                style="@style/TextLabel"
                app:hintTextAppearance="@style/TextLabel"
                android:id="@+id/til1"
                android:background="@drawable/border_txtview"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="text"
                    android:textColor="#fff"
                    android:hint=" Username"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:textSize="14sp"
                    android:id="@+id/name"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_marginBottom="6dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="7dp"
                style="@style/TextLabel"
                app:hintTextAppearance="@style/TextLabel"
                android:id="@+id/til2"
                android:background="@drawable/border_txtview"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:drawableStart="@drawable/ic_email_black_24dp"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textEmailAddress"
                    android:textColor="#fff"
                    android:hint=" Email"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:textSize="14sp"
                    android:id="@+id/email"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_marginBottom="6dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="7dp"
                style="@style/TextLabel"
                app:hintTextAppearance="@style/TextLabel"
                android:id="@+id/til3"
                android:background="@drawable/border_txtview"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:drawableStart="@drawable/ic_lock_black_24dp"
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPassword"
                    android:textColor="#fff"
                    android:hint=" Password"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:textSize="14sp"
                    android:id="@+id/password"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_marginBottom="6dp" />
            </com.google.android.material.textfield.TextInputLayout>
            <CheckBox
                android:layout_marginTop="7dp"
                android:text="   Show Password"
                android:textStyle="bold"
                android:textColor="#aff13e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox"
                android:button="@drawable/cb"
                android:layout_marginLeft="6dp"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/layout_text"
            android:layout_marginTop="40dp">

            <ProgressBar
                android:id="@+id/loading"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_regist"
                android:background="@drawable/mybutton_violet"
                android:textColor="#fdfdfd"
                android:text="Register"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="31dp" />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>